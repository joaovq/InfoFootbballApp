<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FootballApi" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary_brand_dark</item>
        <item name="colorPrimaryVariant">@color/color_primary_brand_dark</item>
        <item name="colorOnPrimary">@color/color_primary_brand_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary_brand_dark</item>
        <item name="colorSecondaryVariant">@color/color_secondary_brand_dark</item>
        <item name="colorOnSecondary">@color/color_secondary_brand_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:enforceStatusBarContrast" tools:targetApi="q">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@drawable/ic_ball_logo</item>
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/color_primary_brand</item>
        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="s">3000</item>
    </style>
    <style name="AppBackground" parent="Theme.MaterialComponents.Light">
        <item name="android:background">@color/color_primary_brand_dark</item>
    </style>
    <style name="TextHeading" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">@dimen/text_heading</item>
        <item name="android:textColor">@color/color_secondary_brand_dark</item>
    </style>
    <style name="TextTitle" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textColor">@color/color_secondary_brand_dark</item>
    </style>
    <style name="TextSubject" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">@dimen/text_subject16sp</item>
        <item name="android:textColor">@color/color_secondary_brand_dark</item>
    </style>
    <style name="TextBody" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/text_medium14sp</item>
        <item name="android:textColor">@color/color_secondary_brand_dark</item>
    </style>
    <style name="TextFontDefaultSplash">
        <item name="android:fontFamily">@font/road_rage_regular</item>
    </style>
    <style name="IconTintTheme">
        <item name="android:tint">@color/color_secondary_brand_dark</item>
    </style>
</resources>