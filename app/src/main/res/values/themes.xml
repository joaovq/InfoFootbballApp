<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FootballApi" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary_brand</item>
        <item name="colorPrimaryVariant">@color/color_primary_brand</item>
        <item name="colorOnPrimary">@color/color_secondary_brand</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary_brand</item>
        <item name="colorSecondaryVariant">@color/color_secondary_brand</item>
        <item name="colorOnSecondary">@color/color_secondary_brand</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:enforceStatusBarContrast" tools:targetApi="q">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@drawable/ic_ball_logo</item>
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/color_primary_brand</item>
        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="s">3000</item>
        <item name="background">@color/color_primary_brand</item>
    </style>
    <style name="AppBackground">
        <item name="android:background">@color/color_primary_brand</item>
    </style>
    <style name="TextHeading" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">@dimen/text_heading</item>
        <item name="android:textColor">@color/color_secondary_brand</item>
    </style>
    <style name="IconTintTheme">
        <item name="android:tint">@color/color_secondary_brand</item>
    </style>
    <style name="TextTitle" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textColor">@color/color_secondary_brand</item>
    </style>
    <style name="TextSubject" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">@dimen/text_subject16sp</item>
        <item name="android:textColor">@color/color_secondary_brand</item>
    </style>
    <style name="TextBody" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/text_medium14sp</item>
        <item name="android:textColor">@color/color_secondary_brand</item>
    </style>
    <style name="TextFontRoadRage">
        <item name="android:fontFamily">@font/road_rage_regular</item>
    </style>
    <style name="TextFont">
        <item name="android:fontFamily">@font/poppins_family</item>
    </style>
    <style name="TextToolbar">
        <item name="android:textColor">@color/color_secondary_brand</item>
        <item name="android:textSize">@dimen/title_toolbar_size</item>
        <item name="android:fontFamily">@font/road_rage_regular</item>
    </style>
    <style name="StyleButtonGetStarted">
        <item name="strokeColor">@color/color_secondary_brand</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:elevation">0dp</item>
        <item name="backgroundTint">@color/color_primary_brand</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/poppins_family</item>
    </style>
    <style name="BottomBarApp" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:layout_margin">@dimen/space_20dp</item>
        <item name="android:background">@drawable/bg_bottom_app_bar</item>
        <item name="android:padding">@dimen/space_8dp</item>
        <item name="itemIconTint">@drawable/bottom_item_selector</item>
        <item name="itemIconSize">30dp</item>
        <item name="itemRippleColor">@null</item>
        <item name="labelVisibilityMode">unlabeled</item>
    </style>
    <style name="ItemMatchesStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:backgroundTint">@color/color_secondary_brand</item>
    </style>
    <style name="TextItemPrimaryColor">
        <item name="android:textColor">@color/color_primary_brand</item>
    </style>
</resources>