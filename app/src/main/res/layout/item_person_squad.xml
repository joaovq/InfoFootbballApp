<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="person"
            type="br.com.joaovitorqueiroz.footballapi.ui.team.domain.model.Person" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/space_8dp"
        android:paddingVertical="@dimen/space_14dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_person"
            android:layout_width="@dimen/size_image_person_squad"
            android:layout_height="@dimen/size_image_person_squad"
            android:src="@drawable/ic_placeholder_player_squad"
            app:layout_constraintStart_toStartOf="parent"
            android:elevation="@dimen/image_elevation_person_squad"
            android:padding="@dimen/space_8dp"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/tv_person_name"
            android:layout_width="wrap_content"
            tools:text="Ter Stegen"
            android:text="@{person.name}"
            style="@style/TextSubject"
            android:layout_marginStart="@dimen/space_8dp"
            app:layout_constraintTop_toTopOf="@id/iv_person"
            app:layout_constraintStart_toEndOf="@id/iv_person"
            app:layout_constraintBottom_toBottomOf="@id/iv_person"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_person_position"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv_person_name"
            app:layout_constraintBottom_toBottomOf="@id/tv_person_name"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@{person.position}"
            style="@style/TextSubject"
            tools:text="Goalkeeper"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>
        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider_person_squad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingTop="@dimen/space_8dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>