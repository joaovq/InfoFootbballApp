<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="br.com.joaovitorqueiroz.footballapi.ui.team.presentation.viewmodel.TeamViewModel" />
        <variable
            name="match"
            type="br.com.joaovitorqueiroz.footballapi.ui.matchscreen.domain.model.Match" />
        <variable
            name="coach"
            type="br.com.joaovitorqueiroz.footballapi.ui.team.domain.model.Coach" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.matchscreen.presentation.view.MatchPersonFragment">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_person"
            android:layout_width="@dimen/size_image_person_squad"
            android:layout_height="@dimen/size_image_person_squad"
            android:src="@drawable/ic_placeholder_player_squad"
            android:elevation="@dimen/image_elevation_person_squad"
            android:padding="@dimen/space_8dp"
            app:visibilityView="@{!viewModel.isLoading()}"
            app:layout_constraintTop_toTopOf="@id/tv_squad_coach_name"
            app:layout_constraintEnd_toStartOf="@id/tv_squad_coach_name"
            app:layout_constraintBottom_toBottomOf="@id/tv_squad_coach_name"
            />
        <RadioGroup
            android:id="@+id/radio_select_squad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginVertical="@dimen/space_8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:foreground="@drawable/shape_radio_group"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/radio_home_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:paddingHorizontal="@dimen/space_8dp"
                android:background="@drawable/item_selector_radio_button_squad"
                android:textColor="@drawable/radio_group_text_color"
                style="@style/TextBody"
                android:checked="true"
                android:text="@{match.homeTeam.name}"
                tools:text="Vitoria"
                />
            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/radio_away_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:paddingHorizontal="@dimen/space_8dp"
                style="@style/TextBody"
                android:textColor="@drawable/radio_group_text_color"
                android:background="@drawable/item_selector_radio_button_squad"
                android:text="@{match.awayTeam.name}"
                tools:text="Ponte preta"
                />
        </RadioGroup>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_squad_coach_name"
            android:layout_width="wrap_content"
            tools:text="Guardiola"
            android:gravity="center"
            style="@style/TextTitle"
            android:text="@{coach.name}"
            app:visibilityView="@{!viewModel.isLoading()}"
            android:textAppearance="@style/TextFont"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/space_8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/radio_select_squad"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_squad_team"
            android:layout_width="match_parent"
            android:padding="@dimen/space_8dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            tools:listitem="@layout/item_person_squad"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:visibilityView="@{!viewModel.isLoading()}"
            app:layout_constraintTop_toBottomOf="@id/tv_squad_coach_name"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <ProgressBar
            android:id="@+id/pb_squad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/color_secondary_brand"
            android:progressTint="@color/color_secondary_brand"
            app:visibilityView="@{viewModel.isLoading()}"
            app:layout_constraintTop_toBottomOf="@id/radio_select_squad"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>