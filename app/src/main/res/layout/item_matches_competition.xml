<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="java.util.List"/>
        <variable
            name="matchList"
            type="List&lt;br.com.joaovitorqueiroz.footballapi.ui.matchscreen.domain.model.Match>" />
        <variable
            name="competition"
            type="br.com.joaovitorqueiroz.footballapi.ui.matchscreen.domain.model.Competition" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_competition_emblem"
            android:layout_width="@dimen/size_emblem_competion_matches"
            android:layout_height="@dimen/size_emblem_competion_matches"
            app:layout_constraintTop_toTopOf="@id/tv_competition_name"
            android:padding="@dimen/space_8dp"
            app:urlImg="@{competition.emblem}"
            tools:srcCompat="@drawable/ic_profile"
            app:layout_constraintEnd_toStartOf="@id/tv_competition_name"
            app:layout_constraintBottom_toBottomOf="@id/tv_competition_name"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_competition_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="180dp"
            android:gravity="center"
            android:textAppearance="@style/TextSubject"
            android:fontFamily="@font/poppins_family"
            android:textAllCaps="true"
            tools:text="Champions League"
            android:text="@{competition.name}"
            android:textStyle="bold"
            android:padding="@dimen/space_8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_matches"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/items_match"
            app:matchesData="@{matchList}"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/tv_competition_name"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>