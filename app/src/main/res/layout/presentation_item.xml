<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_presentation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:srcCompat="@drawable/building_surrounded_by_nature" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title_presentation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Fast Information"
        style="@style/TextFont"
        android:textAppearance="@style/TextHeading"
        android:gravity="center"
        android:layout_marginTop="@dimen/space_20dp"
        android:textStyle="bold"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_description_presentation"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/space_16dp"
        android:gravity="center"
        style="@style/TextFont"
        android:textAlignment="center"
        android:textAppearance="@style/TextBody"
        tools:text="Fast Information" />

</androidx.appcompat.widget.LinearLayoutCompat>