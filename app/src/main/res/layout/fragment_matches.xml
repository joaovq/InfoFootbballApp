<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="br.com.joaovitorqueiroz.footballapi.ui.matches.presentation.viewmodel.MatchesViewModel" />
        <variable
            name="dialog"
            type="android.app.Dialog" />
    </data>
    <androidx.appcompat.widget.LinearLayoutCompat android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:padding="@dimen/space_20dp"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextFont"
            android:id="@+id/tv_your_matches"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/text_your_matches"
            android:textAppearance="@style/TextTitle"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_matches_competition"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            app:listData="@{viewModel.matchList}"
            app:stateProgress="@{dialog}"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_matches_competition" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>