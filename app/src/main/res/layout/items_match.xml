<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ItemMatchesStyle"
    android:layout_marginVertical="@dimen/space_10dp"
    app:cardCornerRadius="@dimen/corner_radius_item_match_card">
   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <androidx.appcompat.widget.AppCompatTextView
           android:id="@+id/tv_competion_stage"
           android:layout_width="wrap_content"
           android:maxWidth="@dimen/max_width_text_competition_stage"
           android:gravity="center"
           tools:text="GROUP STAGE"
           android:fontFamily="@font/poppins_family"
           style="@style/TextItemPrimaryColor"
           android:textAppearance="@style/TextBody"
           app:layout_constraintTop_toTopOf="parent"
           android:layout_marginStart="@dimen/space_10dp"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           android:layout_height="wrap_content"/>
       <androidx.appcompat.widget.AppCompatImageView
           android:id="@+id/iv_home_team"
           android:layout_width="@dimen/emblem_size_item_match"
           android:layout_height="@dimen/emblem_size_item_match"
           tools:srcCompat="@drawable/ic_profile"
           app:layout_constraintTop_toTopOf="@id/tv_score"
           app:layout_constraintBottom_toBottomOf="@id/tv_score"
           app:layout_constraintEnd_toStartOf="@id/tv_score"
           />
       <androidx.appcompat.widget.AppCompatTextView
           android:id="@+id/tv_score"
           android:layout_width="wrap_content"
           tools:text="3 x 0"
           android:fontFamily="@font/road_rage_regular"
           style="@style/TextItemPrimaryColor"
           android:textSize="@dimen/text_size_score_item_match"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           android:layout_height="wrap_content"/>
       <androidx.appcompat.widget.AppCompatImageView
           android:id="@+id/iv_away_team"
           android:layout_width="@dimen/emblem_size_item_match"
           android:layout_height="@dimen/emblem_size_item_match"
           tools:srcCompat="@drawable/ic_profile"
           app:layout_constraintTop_toTopOf="@id/tv_score"
           app:layout_constraintBottom_toBottomOf="@id/tv_score"
           app:layout_constraintStart_toEndOf="@id/tv_score"
           />
       <androidx.appcompat.widget.AppCompatTextView
           android:id="@+id/tv_match_time"
           android:layout_width="60dp"
           android:gravity="center"
           tools:text="90+5\''"
           app:layout_constraintTop_toTopOf="parent"
           android:fontFamily="@font/poppins_family"
           style="@style/TextItemPrimaryColor"
           android:textSize="@dimen/text_subject16sp"
           android:textStyle="bold"
           app:layout_constraintBottom_toBottomOf="parent"
           android:layout_marginEnd="@dimen/space_20dp"
           app:layout_constraintEnd_toEndOf="parent"
           android:layout_height="wrap_content"/>
   </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>